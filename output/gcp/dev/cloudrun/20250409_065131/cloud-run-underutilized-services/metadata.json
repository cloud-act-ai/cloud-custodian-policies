{
  "policy": {
    "name": "cloud-run-underutilized-services",
    "resource": "gcp.cloud-run-service",
    "description": "Identifies Cloud Run services that have low request counts over the past 30 days.\nThese services might be candidates for consolidation or removal to reduce costs.\n",
    "filters": [
      {
        "type": "metrics",
        "name": "run.googleapis.com/request_count",
        "metric-key": "resource.labels.service_name",
        "days": 30,
        "reducer": "REDUCE_SUM",
        "aligner": "ALIGN_SUM",
        "op": "less-than",
        "value": 1000
      },
      {
        "not": [
          {
            "type": "value",
            "key": "metadata.labels",
            "op": "contains",
            "value": "essential:true"
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "notify",
        "to": [
          "devops@example.com",
          "finops@example.com"
        ],
        "format": "json",
        "subject": "Underutilized Cloud Run Service: {metadata.name}",
        "body": "Cloud Run service {metadata.name} in project {project_id} is potentially underutilized.\n\nService details:\n- Name: {metadata.name}\n- Region: {metadata.labels.cloud.googleapis.com/location}\n- Created: {metadata.creationTimestamp}\n- URL: {status.url}\n\nThis service has received fewer than 1,000 requests in the past 30 days.\nConsider consolidating or removing this service if it's no longer needed.\n",
        "transport": {
          "type": "pubsub",
          "topic": "projects/{project_id}/topics/custodian-notifications"
        }
      }
    ]
  },
