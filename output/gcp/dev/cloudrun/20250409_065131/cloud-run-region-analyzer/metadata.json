{
  "policy": {
    "name": "cloud-run-region-analyzer",
    "resource": "gcp.cloud-run-service",
    "description": "Analyzes all Cloud Run services in a specific region to identify cost optimization opportunities.\nThis policy consolidates multiple Cloud Run-specific checks into a comprehensive overview.\n",
    "filters": [
      {
        "type": "value",
        "key": "metadata.labels.cloud.googleapis.com/location",
        "value": "$REGION"
      }
    ],
    "actions": [
      {
        "type": "notify",
        "to": [
          "devops@example.com",
          "finops@example.com"
        ],
        "format": "json",
        "subject": "Cloud Run Region Analysis",
        "body": "Region: {metadata.labels.cloud.googleapis.com/location}\nServices Found: {report.services_count}\n\nFor services in this region, we recommend running the following checks:\n1. Check for underutilized services\n2. Check for over-provisioned services\n3. Check for high-concurrency services with limited CPU\n\nNote: These checks will be automatically triggered when this policy runs.\n",
        "transport": {
          "type": "pubsub",
          "topic": "projects/{project_id}/topics/custodian-notifications"
        }
      }
    ]
  },
